<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.nalot.dao.UserDao">
    <select id="selectUserClothesInfo" resultType="com.example.nalot.model.UserClothesDto">
        select * from user_clothes
        where id = #{userClothesId}
    </select>

    <insert id="insertUserClothesInfo" parameterType="com.example.nalot.model.UserClothesDto">
        INSERT INTO user_clothes
            (id, clothes_id, color, color_mix)
        VALUES(#{userClothes.id}, #{userClothes.clothesId}, #{userClothes.color}, #{userClothes.colorMix});
    </insert>

    <delete id="deleteUserClothesInfo">
        DELETE FROM user_clothes
        WHERE id=#{userClothesId};
    </delete>
</mapper>