<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.nalot.dao.UserDao">
    <select id="selectUserHistoryListByUserId" resultType="com.example.nalot.model.UserHistoryDto">
        select * from user_history
        where user_id = #{userId}
    </select>

    <insert id="insertUserHistoryInfo" parameterType="com.example.nalot.model.UserHistoryDto">
        INSERT INTO user_history
            (user_id, weather_id, user_clothes_id, history_date)
        VALUES(#{userHistory.userId}, #{userHistory.weatherId}, #{userHistory.userClothesId}, NOW());
    </insert>
</mapper>