<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.nalot.dao.WeatherDao">
    <select id="selectWeatherInfo" resultType="com.example.nalot.model.WeatherDto">
        select * from weather_information
        where id = #{weatherId}
    </select>

    <insert id="insertWeatherInfo" parameterType="com.example.nalot.model.WeatherDto">
        INSERT INTO weather_information
            (id, temperature_min, temperature_max, temperature_current)
        VALUES(#{weatherDto.id},
               #{weatherDto.temperatureMin},
               #{weatherDto.temperatureMax},
               #{weatherDto.temperatureCurrent});
    </insert>

    <delete id="deleteWeatherInfo">
        DELETE FROM weather_information
        WHERE id=#{weatherId};
    </delete>
</mapper>