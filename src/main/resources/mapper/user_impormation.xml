<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.nalot.dao.UserDao">
    <select id="selectUserList" resultType="com.example.nalot.model.UserDto">
        select * from user_information
    </select>

    <select id="selectUserInfo" resultType="com.example.nalot.model.UserDto">
        select * from user_information
        where id = #{userId}
    </select>

    <insert id="insertUserInfo" parameterType="com.example.nalot.model.UserDto">
        insert into user_information
            (id, password, name, gender, zone_code, address_basic, address_detail)
        values (#{user.id}, #{user.password}, #{user.name}, #{user.gender},
                #{user.zoneCode}, #{user.addressBasic}, #{user.addressDetail})
    </insert>
</mapper>